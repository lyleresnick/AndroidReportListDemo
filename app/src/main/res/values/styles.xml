<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <!-- Account theme -->

    <style name="AccountSectionTitleText" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#47515C</item>

    </style>

    <style name="AccountTransactionDateText" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>

    </style>

    <style name="AccountTransactionDescriptionText" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>

    </style>

    <style name="AccountTransactionAmountText" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#999999</item>

    </style>

    <style name="AccountDetailTransactionTotalDescriptionText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="AccountDetailTransactionTotalAmountText">
    <item name="android:textSize">16sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="AccountDetailTransactionDateText" >
        <item name="android:textColor">#666666</item>
        <item name="android:textAllCaps">true</item>
    </style>



</resources>
